<%= form_with model: article do |form| %>

  <div>
    <% if article.errors.any? %>
      <ul>
        <% article.errors.full_messages.each do |message| %>
          <li>
              <%= message %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>